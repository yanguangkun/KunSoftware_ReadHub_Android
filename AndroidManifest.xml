<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.readhub"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="cn.readhub.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cn.readhub.AddBookActivity"
            android:label="@string/title_activity_add_book" >
        </activity>
        <activity
            android:name="cn.readhub.BookMarkerActivity"
            android:label="@string/title_activity_book_marker" >
        </activity>
        <activity
            android:name="cn.readhub.TMainActivity"
            android:label="@string/title_activity_tmain" >
        </activity>
    </application>

</manifest>
